<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Radio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/OrangeRed</item>
        <item name="colorPrimaryVariant">@color/RoyalBlue</item>
        <item name="colorOnPrimary">@color/White</item>
        <item name="colorOnSecondary">@color/Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="cardBackgroundColor">@color/white</item>

    </style>

    <style name="Theme.Settings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/OrangeRed</item>
        <item name="colorPrimaryVariant">@color/RoyalBlue</item>
        <item name="colorOnPrimary">@color/White</item>
        <item name="colorOnSecondary">@color/Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/light_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:windowSplashScreenBackground">@color/black</item>
    </style>
    <style name="Theme.Radio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Radio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Radio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/amiko_regular</item>
        <item name="maxLines">1</item>
    </style>

   <style name="textHeading" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="maxLines">1</item>
    </style>



</resources>