<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_radio">

    <fragment
        android:id="@+id/navigation_radio"
        android:name="com.coderoids.radio.ui.radio.RadioFragment"
        android:label="@string/title_radio"
        tools:layout="@layout/fragment_radio" />

    <fragment
        android:id="@+id/navigation_podcast"
        android:name="com.coderoids.radio.ui.podcast.PodcastFragment"
        android:label="@string/title_podcast"
        tools:layout="@layout/fragment_podcast" />

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="com.coderoids.radio.ui.favourites.FavouritesFragment"
        android:label="@string/title_favourites"
        tools:layout="@layout/fragment_favourites" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.coderoids.radio.ui.favourites.FavouritesFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_favourites" />
</navigation>