<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Radio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Black</item>
        <item name="colorPrimaryVariant">@color/RoyalBlue</item>
        <item name="colorOnPrimary">@color/White</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/amiko</item>
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardForegroundColor">@color/black</item>
    </style>

    <style name="Theme.Settings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Black</item>
        <item name="colorPrimaryVariant">@color/RoyalBlue</item>
        <item name="colorOnPrimary">@color/White</item>
        <item name="colorOnSecondary">@color/Black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/Black</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/amiko</item>
        <item name="android:windowSplashScreenBackground">@color/black</item>
    </style>
</resources>