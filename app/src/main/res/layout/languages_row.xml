<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="languageList"
            type="com.netcast.baidutv.ui.radio.lanuages.Data" />

        <variable
            name="listener"
            type="com.netcast.baidutv.ui.radio.adapter.OnClickListenerLanguages" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/layout_filterbg"
        android:onClick="@{() -> listener.onLanguageClicked(languageList)}"

        android:orientation="vertical"
        android:padding="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            style="@style/textsubheading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"

            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/_5sdp"
            android:text="@{languageList.name.substring(0, 1).toUpperCase() + languageList.name.substring(1)}"
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/textView"
            android:layout_marginTop="@dimen/_2sdp"
            android:alpha=".2"
            android:background="@color/black" />
    </RelativeLayout>

</layout>