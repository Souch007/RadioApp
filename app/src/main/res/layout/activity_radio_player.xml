<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="radioplayerb"
            type="com.netcast.radio.ui.radioplayermanager.RadioPlayerActivity" />

        <variable
            name="radioplayervm"
            type="com.netcast.radio.ui.radioplayermanager.RadioPlayerAVM" />

        <variable
            name="podepisodeadapter"
            type="com.netcast.radio.ui.radioplayermanager.adapter.PodEpisodesAdapter" />

        <variable
            name="adapter"
            type="com.netcast.radio.ui.radio.adapter.RadioFragmentAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/rp_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/header"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/settings_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back_nav_grad"
                android:padding="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/title_settings"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/tv_channel_name"
                    style="@style/textHeading"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLength="30"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/title_radio"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_back"
                    app:layout_constraintTop_toTopOf="parent" />


                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_channel_name">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_channel_logo"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/logo"
                        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                        app:strokeWidth="1dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_channel_logo"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:id="@+id/back_blur"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.2"
                                android:scaleType="centerCrop"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                                app:strokeWidth="1dp" />

                            <TextView
                                android:id="@+id/episode"
                                style="@style/textHeading"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_30sdp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/white" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/episode"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:elevation="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/fav_iv"
                                    android:layout_width="@dimen/_45sdp"
                                    android:layout_height="@dimen/_45sdp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:button="@drawable/checkbox_selector"
                                    android:buttonTint="@color/white"
                                    android:gravity="center"
                                    android:scaleX="0.6"
                                    android:scaleY="0.6"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_channel_name"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"

                                    >

                                    <ProgressBar
                                        android:id="@+id/progress_download"
                                        android:layout_width="@dimen/_45sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_centerInParent="true"
                                        android:indeterminate="true"
                                        android:indeterminateTint="@color/OrangeRed"
                                        android:indeterminateTintMode="src_atop"
                                        android:visibility="visible"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.0" />


                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ic_play"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/play_button" />


                                </RelativeLayout>

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/player_options"
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_toEndOf="@+id/ic_play"
                                    android:clickable="true"
                                    android:src="@drawable/ic_menu" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_marginStart="@dimen/_20sdp"
                                    android:src="@drawable/ic_menu"
                                    android:visibility="gone" />

                            </androidx.appcompat.widget.LinearLayoutCompat>


                        </RelativeLayout>

                    </LinearLayout>

                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/player_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:visibility="gone"
                        app:auto_show="true"
                        app:hide_during_ads="false"
                        app:hide_on_touch="false"
                        app:played_color="@color/OrangeRed"
                        app:show_buffering="always"
                        app:show_shuffle_button="true"
                        app:show_timeout="0"
                        app:unplayed_color="@color/white" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/channel_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#151523"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/settings_bar_layout" />

            <TextView
                android:id="@+id/channel_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_arrow_outward_24"
                android:drawableTint="@color/black"
                android:padding="@dimen/_10sdp"
                android:text="Go To Website"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/channel_description" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/radio_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#151523"
                android:visibility="gone"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/channel_website">

                <TextView
                    android:id="@+id/tv_player_radio_more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="More Stations"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    app:fontFamily="@font/poppins_bold"
                    app:layout_constraintEnd_toStartOf="@+id/tv_all_player_more"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_all_player_more"
                    style="@style/textHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="@string/all"
                    android:textColor="@color/OrangeRed"
                    android:textSize="@dimen/_9sdp"
                    android:visibility="invisible"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_player_radio_more"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/all_radio_more_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_30sdp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_player_radio_more"
                    app:setAdapter="@{adapter}"
                    app:spanCount="3"
                    app:submitList="@{radioplayervm.alternateChannels}"
                    tools:listitem="@layout/radio_row" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/pod_episodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/channel_website">

                <TextView
                    android:id="@+id/tv_podcast_episodes"
                    style="@style/textHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Episodes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/podcast_loader"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/OrangeRed"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/podcast_episodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_podcast_episodes"
                    app:setAdapter="@{podepisodeadapter}"
                    app:submitList="@{radioplayervm.podEpisodeArray}"
                    tools:listitem="@layout/podcast_episodes_row" />


            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.cardview.widget.CardView
            android:id="@+id/ll_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/DarkBlue"
            android:layout_margin="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:visibility="gone"
            >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/DarkBlue"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_close"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:src="@drawable/ic_cross_white"
                />
            <!--<include
                android:id="@+id/header"
                layout="@layout/activity_header" />-->

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="@dimen/_8sdp"
                app:cardBackgroundColor="#151523"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="@dimen/_3sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_gravity="center"
                    android:background="#6BF6F5F5"
                    android:elevation="@dimen/_10sdp"
                    android:gravity="center">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#9A979797"
                        android:elevation="1dp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:src="@drawable/logo" />

                    <androidx.appcompat.widget.AppCompatImageView
                        style="@style/textsubheading"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_5sdp"
                        android:src="@drawable/ic_closecircle"
                        app:tint="@color/Red" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text="This channel is currently unavailable would you like to play another channel from suggested list? "
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_Playnext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_oval"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_playnext"
                    android:visibility="gone"
                    app:tint="@color/OrangeRed" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_suggested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_30sdp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:setAdapter="@{adapter}"
                    app:spanCount="3"
                    app:submitList="@{radioplayervm.alternateChannels}"
                    tools:listitem="@layout/radio_row" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>