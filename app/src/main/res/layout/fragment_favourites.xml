<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="favViewModel"
            type="com.netcast.radio.ui.favourites.FavouritesViewModel" />

        <variable
            name="mainViewModel"
            type="com.netcast.radio.MainViewModel" />

        <variable
            name="favouritesAdapter"
            type="com.netcast.radio.ui.favourites.adapters.FavouriteAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.favourites.FavouritesFragment">

        <!-- <TextView
             android:id="@+id/head"
             style="@style/textHeading"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="@dimen/_10sdp"
             android:text="Your Favourite \n Channels &amp; Podcasts"
             android:textAlignment="center"
             android:textSize="@dimen/_18sdp"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/btn_download" />
 -->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_download"
            style="@style/textHeading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/black"
            android:drawableLeft="@drawable/ic_downloadwhite"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center|left"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:text="My Downloads"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/emptyView"
            style="@style/textHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="You have not added any favourites yet"
            android:textAlignment="center"
            android:textSize="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_tabview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"

            android:background="@color/black"
            android:elevation="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_download">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_Radio"
                android:layout_width="150dp"
                android:layout_height="@dimen/_50sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Channels"
                android:textColor="@color/OrangeRed"
                android:textSize="@dimen/_15sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_Podcast"
                android:layout_width="150dp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="PodCast"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fav_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_tabview"
            app:layout_constraintVertical_bias="0.019"
            app:setAdapter="@{favouritesAdapter}"
            app:spanCount="4"
            app:reverseLayout="false"
            app:submitList="@{mainViewModel.favouritesRadioArray}"
            tools:listitem="@layout/podcast_search_row" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>