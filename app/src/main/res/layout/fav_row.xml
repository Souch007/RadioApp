<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="playing"
            type="com.netcast.radio.PlayingChannelData" />

        <variable
            name="tabtype"
            type="String" />

        <variable
            name="listener"
            type="com.netcast.radio.ui.favourites.adapters.OnFavouriteClickListener" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:elevation="@dimen/_8sdp"
            android:onClick="@{() -> listener.onFavChannelClicked(playing,tabtype)}"
            app:cardBackgroundColor="#151523"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">


            <RelativeLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_100sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_delete"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:background="@drawable/bg_circlewhite"
                    android:elevation="@dimen/_10sdp"
                    android:gravity="center"
                    android:onClick="@{() -> listener.onFavChannelDeleteClicked(playing)}"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imageView_delete"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_circle"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintBottom_toTopOf="@+id/textView" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setImage="@{playing.favicon}" />


                <TextView
                    android:id="@+id/textView"
                    style="@style/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@id/imageView"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="2"
                    android:maxLines="2"
                    android:padding="@dimen/_2sdp"
                    android:text="@{playing.name}"

                    android:textSize="@dimen/_10sdp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:background="#C9979797"
                android:gravity="center"
                android:visibility='@{playing.isBlocked ? View.VISIBLE : View.GONE}'>

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/textsubheading"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_closecircle"
                    app:tint="@color/Red" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>