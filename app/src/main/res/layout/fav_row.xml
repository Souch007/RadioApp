<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="playing"
            type="com.netcast.radio.PlayingChannelData" />

        <variable
            name="listener"
            type="com.netcast.radio.ui.favourites.adapters.OnFavouriteClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:elevation="@dimen/_8sdp"
            android:onClick="@{() -> listener.onFavChannelClicked(playing)}"
            app:cardBackgroundColor="#151523"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_3sdp">


            <RelativeLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_85sdp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_delete"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_alignParentRight="true"
                    android:elevation="@dimen/_10sdp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:onClick="@{() -> listener.onFavChannelDeleteClicked(playing)}"
                    android:background="@drawable/bg_circlewhite"
                    >

                    <ImageView
                        android:id="@+id/imageView_delete"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_circle"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintBottom_toTopOf="@+id/textView"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/logo"

                    app:layout_constraintBottom_toTopOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:setImage="@{playing.favicon}" />


                <TextView
                    android:id="@+id/textView"
                    style="@style/textTitle"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/imageView"
                    android:ellipsize="end"
                    android:gravity="start|center"
                    android:lines="1"
                    android:maxLines="1"
                    android:padding="@dimen/_2sdp"
                    android:text="@{playing.name}"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_7sdp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>