<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.netcast.radio.PlayingChannelData" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="listener"
            type="com.netcast.radio.ui.radio.adapter.OnClickAlarmItem" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:elevation="@dimen/_8sdp"
        android:onClick="@{() -> listener.onAlramItemClicked(data,pos)}"
        app:cardBackgroundColor="#151523"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setImage="@{data.favicon}" />

            <TextView
                android:id="@+id/textView"
                style="@style/textTitle"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="start|center"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/_2sdp"
                android:text="@{data.name}"
                android:textAlignment="textStart"
                android:textSize="@dimen/_7sdp"
                android:textStyle="normal"
                />

            <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="0dp"
                android:clickable="false"
                android:enabled="false"
                android:checked="@{data.isSelected}"
                android:layout_height="match_parent"
                android:layout_weight=".15"

                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>