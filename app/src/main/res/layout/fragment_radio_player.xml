<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <data>

        <variable
            name="radioplayerbinding"
            type="com.coderoids.radio.ui.radio.RadioViewModel" />

        <variable
            name="adapter"
            type="com.coderoids.radio.ui.radio.adapter.RadioFragmentAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_settings_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/title_settings"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/settings_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:padding="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/title_settings"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/tv_channel_name"
                style="@style/textHeading"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:text="@string/title_radio"
                android:gravity="center|start"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_back"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_channel_name">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:src="@drawable/ic_podcast"
                    app:setImage="@{radioplayerbinding.radioClickEvent.favicon}"
                    android:id="@+id/iv_channel_logo"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iv_channel_logo"
                    >
                    <TextView
                        android:id="@+id/location_channel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:text="@{radioplayerbinding.radioClickEvent.country}"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/fav_ic"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@+id/location_channel"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/ic_baseline_favorite_border_24"
                        app:tint="@color/white" />

                    <com.google.android.exoplayer2.ui.PlayerControlView
                        android:id="@+id/play_button"
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_below="@+id/location_channel"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        app:tint="@color/white" />
                    <!--                <ImageView-->
                    <!--                    android:layout_width="@dimen/_45sdp"-->
                    <!--                    android:layout_height="@dimen/_45sdp"-->
                    <!--                    android:src="@drawable/ic_baseline_play_circle_filled_24"-->
                    <!--                    android:layout_below="@+id/location_channel"-->
                    <!--                    android:layout_toEndOf="@+id/fav_ic"-->
                    <!--                    android:layout_marginStart="@dimen/_20sdp"-->
                    <!--                    android:id="@+id/play_button"-->
                    <!--                    app:tint="@color/white" />-->

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_baseline_drag_indicator_24"
                        android:layout_below="@+id/location_channel"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        app:tint="@color/white"/>
                </RelativeLayout>
            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/channel_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{radioplayerbinding.radioClickEvent.country}"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_bar_layout" />

        <TextView
            android:id="@+id/channel_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Go To Website"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:drawableEnd="@drawable/ic_baseline_arrow_outward_24"
            android:drawableTint="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/channel_description" />

        <TextView
            android:id="@+id/tv_player_radio_more"
            style="@style/textHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="More Stations"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toStartOf="@+id/tv_all_player_more"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/channel_website" />

        <TextView
            android:id="@+id/tv_all_player_more"
            style="@style/textHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/all"
            android:textColor="@color/Gold"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_player_radio_more"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/all_radio_more_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_player_radio_more"
            app:setAdapter="@{adapter}"
            app:submitList="@{radioplayerbinding.radioListingArray}"
            tools:listitem="@layout/radio_row" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>