    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_nav_grad"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/slideUp"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/playing_channel_name"
                style="@style/textHeading"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_toStartOf="@+id/play_button_carousel_"
                android:layout_toEndOf="@+id/slideUp"
                android:maxLines="2"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/white" />


            <com.google.android.exoplayer2.ui.PlayerControlView
                android:id="@+id/play_button_carousel_"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"

                app:controller_layout_id="@layout/exo_custom"
                app:show_timeout="-1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/close_button"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_50sdp"
                app:cardBackgroundColor="@color/Black"
                app:cardElevation="@dimen/_35sdp"
                android:layout_height="@dimen/_43sdp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cross_white"
                    />

            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
