<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="feeds"
            type="com.netcast.radio.ui.podcast.poddata.PodListData" />

        <variable
            name="listener"
            type="com.netcast.radio.ui.podcast.adapter.OnClickListenerPodcast" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_8sdp"
        android:layout_margin="@dimen/_4sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="#151523"
        android:onClick="@{() -> listener.onPodCastClicked(feeds)}"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_85sdp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:src="@drawable/logo"
                app:layout_constraintBottom_toTopOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:setImage="@{feeds.image}" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="match_parent"
                android:gravity="start|center"
                android:padding="@dimen/_2sdp"
                android:text="@{feeds.title}"
                style="@style/textTitle"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAlignment="textStart"
                android:textSize="@dimen/_7sdp"
                android:textStyle="normal"
                android:lines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>